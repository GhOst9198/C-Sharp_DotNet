
@{
    ViewBag.Title = "Agents";
}

<h2>Agents</h2>
<form class="user">
    <div class="form-group row">
        <div class="col-sm-4 mb-3 mb-sm-0">
            @Html.Label("City")
            @Html.TextBox("City", null, new { @class = "form-control", placeholder = "Enter City Name" })

        </div>
        <div class="col-sm-4">
            @Html.Label("Location")
            @Html.TextArea("Location", null, new { @class = "form-control", placeholder = "Enter Location" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4 mb-3 mb-sm-0">
            @Html.Label("Agency Type")
            @Html.DropDownList("Select Type Of Agency", new List<SelectListItem>
            {
                new SelectListItem() {Text="All",Value="1"},
                new SelectListItem() {Text="Titanium",Value="2"},
                new SelectListItem() {Text="Featured",Value="3"},
                new SelectListItem() {Text="Normal",Value="4"},
            },
                new { @Class = "form-control" })
        </div>
        <div class="col-sm-4">
            @Html.Label("Company")
            @Html.TextArea("Company", null, new { @class = "form-control", placeholder = "Enter Company" })
        </div>
    </div>

</form>

