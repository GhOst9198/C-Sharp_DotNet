
@model List<TheReaLState.Models.BuyModel>
@{
    ViewBag.Title = "ViewBuy";
}

<h2>ViewBuy</h2>

<!DOCTYPE html>
<!-- DataTales Example -->
<div class="form-group row">
    <div class="col-sm-4">
        <label>@ViewBag.Mesage</label>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@item.City</h6>
        </div>
        <div class="row">
            <div class="col-lg-6 "><img src="~/Content/LogoImages/@item.image" alt="@item.image" style="width:100%;height:100%"></div>
            <div class="col-lg-6">
                <div class="p-5">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" height="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Property ID</th>
                                        <td>@item.PropertyID</td>
                                    </tr>
                                    <tr>
                                        <th>City</th>
                                        <td>@item.City</td>
                                    </tr>
                                    <tr>
                                        <th>Location</th>
                                        <td>@item.Location</td>
                                    </tr>
                                    <tr>
                                        <th>Property Type</th>
                                        <td>@item.PropertyType</td>
                                    </tr>
                                    <tr>
                                        <th>Price</th>
                                        <td>@item.MinPriceRange</td>
                                    </tr>
                                    <tr>
                                        <th>Area in Sq Yd</th>
                                        <td>@item.AreaInSqYd</td>
                                    </tr>
                                    <tr>
                                        <th>Bedrooms</th>
                                        <td>@item.Bedrooms</td>
                                    </tr>
                                    <tr>
                                        <th>TV Lounge</th>
                                        <td>@item.TVLounge</td>
                                    </tr>
                                    <tr>
                                        <th>Outside Garden</th>
                                        <td>@item.OutsideGarden</td>
                                    </tr>
                                    <tr>
                                        <th>West Open</th>
                                        <td>@item.WestOpen</td>
                                    </tr>
                                    <tr>
                                        <th>Corner</th>
                                        <td>@item.Corner</td>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}                     