
@{
    ViewBag.Title = "Plots";
}
<title>The ReaL Estate - Rent Plots</title>
<h2>Plots</h2>
<form class="user">
    <div class="form-group row">
        <div class="col-sm-4 mb-3 mb-sm-0">
            @Html.Label("City")
            @Html.TextBox("City", null, new { @class = "form-control", placeholder = "Enter City Name" })

        </div>
        <div class="col-sm-4">
            @Html.Label("Location")
            @Html.TextArea("Location", null, new { @class = "form-control", placeholder = "Enter Desired Location" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4 mb-3 mb-sm-0">
            @Html.Label("Property Type")
            @Html.DropDownList("Select Type Of Property", new List<SelectListItem>
            {
                new SelectListItem() {Text="Residential Plot",Value="1"},
                new SelectListItem() {Text="Commercial Plot",Value="2"},
                new SelectListItem() {Text="Agricultural land",Value="3"},
                new SelectListItem() {Text="Industrial Land",Value="4"},
                new SelectListItem() {Text="Plot File",Value="5"},
                new SelectListItem() {Text="Plot Form",Value="6"},
            },
                new { @Class = "form-control" })
        </div>
        <div class="col-sm-4">
            @Html.Label("Price(Pkr)")
            @Html.DropDownList("Select Price Range", new List<SelectListItem>
            {
                new SelectListItem() {Text="Less Than 10,000",Value="1"},
                new SelectListItem() {Text="10,000 to 15,000",Value="2"},
                new SelectListItem() {Text="15,000 to 20,000",Value="3"},
                new SelectListItem() {Text="20,000 to 30,000",Value="4"},
                new SelectListItem() {Text="30,000 to 40,000",Value="5"},
                new SelectListItem() {Text="40,000 to 50,000",Value="6"},
                new SelectListItem() {Text="Greater than 50,000",Value="7"},
            },
                new { @Class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4 mb-3 mb-sm-0">
            @Html.Label("Area in Sq Yd")
            @Html.TextBox("Area in Sq Yd", null, new { @class = "form-control", placeholder = "Min:50, Max:4000" })
        </div>
    </div>

</form>

